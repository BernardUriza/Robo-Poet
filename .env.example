# Robo-Poet Environment Configuration
# Copy this file to .env and modify values as needed

# Application
ENVIRONMENT=development
APP_NAME=Robo-Poet
APP_VERSION=2.1.0
DEBUG=true

# Database
DB_URL=sqlite:///./robo_poet.db
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# GPU Configuration
GPU_VISIBLE_DEVICES=0
GPU_MEMORY_GROWTH=true
GPU_MIXED_PRECISION=true
GPU_MAX_MEMORY_MB=

# Training
TRAINING_DEFAULT_EPOCHS=100
TRAINING_DEFAULT_BATCH_SIZE=64
TRAINING_DEFAULT_LEARNING_RATE=0.001
TRAINING_CHECKPOINT_INTERVAL=10
TRAINING_EARLY_STOPPING_PATIENCE=15
TRAINING_VALIDATION_SPLIT=0.2

# Storage
STORAGE_MODELS_DIR=./models
STORAGE_CORPUS_DIR=./corpus
STORAGE_LOGS_DIR=./logs
STORAGE_TEMP_DIR=./temp
STORAGE_MAX_CORPUS_SIZE_MB=500

# Security
SECURITY_SECRET_KEY=dev-secret-key-change-in-production
SECURITY_API_KEY_HEADER=X-API-Key
SECURITY_ALLOWED_HOSTS=localhost,127.0.0.1
SECURITY_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
SECURITY_RATE_LIMIT_REQUESTS=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_ENABLED=true
LOG_FILE_MAX_SIZE_MB=10
LOG_FILE_BACKUP_COUNT=5
LOG_CONSOLE_ENABLED=true
LOG_STRUCTURED_LOGGING=false

# API
API_HOST=localhost
API_PORT=8000
API_PREFIX=/api/v1

# Workers
WORKER_CONCURRENCY=4
BACKGROUND_TASKS_ENABLED=true

# Claude AI Integration (Phase 3 - Intelligent Training)
CLAUDE_API_KEY=sk-ant-api03-your-api-key-here
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=2000
CLAUDE_TIMEOUT_SECONDS=30

# Intelligent Training Configuration
INTELLIGENT_TRAINING_ENABLED=true
INTELLIGENT_TRAINING_MAX_CYCLES=5
INTELLIGENT_TRAINING_IMPROVEMENT_THRESHOLD=0.1
INTELLIGENT_TRAINING_MIN_CONFIDENCE=0.6